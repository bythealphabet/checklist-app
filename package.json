{
  "name": "solargard-checklist",
  "version": "1.0.0",
  "description": "Installation checklist manager for solar products",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "pkg . --targets node18-win-x64 --output dist/solargard-checklist.exe",
    "build-all": "pkg . --targets node18-win-x64,node18-linux-x64,node18-macos-x64 --out-path dist/"
  },
  "bin": "server.js",
  "pkg": {
    "assets": [
      "public/**/*",
      "data/**/*",
      "uploads/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "keywords": ["solar", "checklist", "installation"],
  "author": "SolarGard",
  "license": "MIT"
} 